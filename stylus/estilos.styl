@import "normalize.styl"
@import "fonts.styl"

gris_oscuro =#3333
gris_claro =#818181
body
	font-family: 'Varela Round', sans-serif;
	font-size 16px
	
figure
	margin 0
img
	vertical-align top

.button-menu
	color #333
	left 1.5em
	margin-top -10px
	position absolute
	top 50%
		
.container
	padding 1.4rem
	font-size 0
	text-align center
.action
	color white
	margin-right .5em
	font-size 1.2em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
		

.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black,.3)

.right-text
	text-align right
	
	
.border-bottom
	border-bottom 1px solid gris_claro


.name
	color gris_oscuro

.relative
	position relative
.padding
	padding 1em
.padding-tb
	padding 1em 0
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		top -5px
		position absolute
	.min
		left 0
	.max
		right 0
		
	.total
		height 5px
		background gris_oscuro
		width 75%
		border-radius 5px
		margin 0 auto
		
	.state
		height 5px
		background #DC3636
		width 30%
		border-radius 5px
		position relative
		
	.circle
		width 10px
		height 10px
		background gris_claro
		border-radius 50%
		position absolute
		right 0
		top -2px
.menu
	display none
.center-block
	margin 0 auto
.center-text
	text-align center
.author
	color gris_claro	
	
.header
	height 3.5em
	
	a
		display block
		
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
		
.song
	width 16rem
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	&:nth-child(even)
		margin-right 0
	p	
		margin .5em 0
		
.playing
	&.small
		width 20em