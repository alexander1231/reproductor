@import "normalize.styl"


gris_oscuro =#3333
gris_claro =#818181
body
	font-family: 'Varela Round', sans-serif;
	font-size 16px
figure
	margin 0
	

.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
		
.container
	padding 1.5rem
	font-size 0
	text-align center

.border-bottom
	border-bottom 1px solid gris_claro


.name
	color gris_oscuro

.relative
	position relative	
.menu
	display none
	
.author
	color gris_claro	
.center-block
	margin 0 auto
.center-text
	text-align center
.header
	height 3.5em
	
	a
		display inline
		
	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em
		
.song
	width 16rem
	display inline-block
	font-size 0.1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	&:nth-child(even)
		margin-right 0
	p	
		margin .5em 0

.playing
	&.small
		width 20em
		